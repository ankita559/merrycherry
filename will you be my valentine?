  <!-- Audio -->
  <audio id="cryAudio" src="https://www.soundjay.com/human/sounds/crying-baby-01.mp3"></audio>
  <audio id="alarmAudio" src="https://www.soundjay.com/misc/sounds/alarm-clock-01.mp3"></audio>

  <script>
    const noBtn = document.getElementById("no");
    const yesBtn = document.getElementById("yes");
    const message = document.getElementById("message");
    const cryAudio = document.getElementById("cryAudio");
    const alarmAudio = document.getElementById("alarmAudio");

    const phrases = [
      "Donâ€™t do this ğŸ˜­",
      "Why are you like this?",
      "This hurts my feelings",
      "Wrong button bestie",
      "Try again ğŸ˜¤",
      "I raised you better"
    ];

    noBtn.addEventListener("mouseover", () => {
      const x = Math.random() * 240;
      const y = Math.random() * 110;

      noBtn.style.left = `${x}px`;
      noBtn.style.top = `${y}px`;
      noBtn.innerText = phrases[Math.floor(Math.random() * phrases.length)];

      cryAudio.currentTime = 0;
      cryAudio.play();
    });

    yesBtn.addEventListener("click", () => {
      message.style.display = "block";
      yesBtn.style.display = "none";
      noBtn.style.display = "none";

      alarmAudio.play();
      launchConfetti();
    });

    function launchConfetti() {
      for (let i = 0; i < 80; i++) {
        const confetti = document.createElement("div");
        confetti.classList.add("confetti");
        confetti.style.left = Math.random() * window.innerWidth + "px";
        confetti.style.backgroundColor = 
          ["#ff2f6e", "#ffd166", "#06d6a0", "#4cc9f0"][Math.floor(Math.random() * 4)];
        confetti.style.animationDuration = (Math.random() * 2 + 2) + "s";
        document.body.appendChild(confetti);

        setTimeout(() => confetti.remove(), 3000);
      }
    }
  </script>
